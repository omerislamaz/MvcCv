@using MvcCv.Models.Entity
@model List<TblIletisim>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <br />
            <br />
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body" style="background-color:lightgrey">

                            @if (Model != null && Model.Any())
                            {
                                <div class="alert alert-warning" role="alert">
                                    <b>
                                        Toplam <strong>@Model.Count()</strong> Mesaj bulumaktadır.
                                    </b>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger">
                                    Kayıtlı Mesaj    Bulunmuyor!
                                </div>
                            }
                            <br />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="tab-pane" id="timeline">
                                                <div class="timeline timeline-inverse">
                                                    @foreach (var item in Model)
                                                    {
                                                        <div class="time-label">
                                                            <span class="bg-info">
                                                                @(((DateTime)item.Tarih).ToString("dd-MMM-yyyy"))
                                                            </span>
                                                        </div>
                                                        <div>
                                                            <i class="fas fa-comments bg-warning"></i>
                                                            <div class="timeline-item">
                                                                <span class="time"><i class="far fa-clock"></i> @item.Mail</span>
                                                                <h3 class="timeline-header"><a href="#">@item.AdSoyad</a> &nbsp;&nbsp; @item.Konu</h3>
                                                                <div class="timeline-body">
                                                                    <div>
                                                                        <strong>Mesaj:</strong>&nbsp;&nbsp;&nbsp;
                                                                        @item.Mesaj
                                                                    </div>
                                                                </div>                                                                
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
