
@model MvcCv.Models.Entity.TblSosyalMedya
@{
    ViewBag.Title = "SayfaGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<link href="//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.css" rel="stylesheet">

<br />
<h4>Sosyal Medya Düzenleme Sayfası</h4>
<br />

<form method="post">

    @Html.Label("Sosyal Medya Adı")
    @Html.TextBoxFor(x => x.Ad, new { @class = "form-control" })
    <br />

    @Html.Label("Sosyal Medya Link")
    @Html.TextBoxFor(x => x.Link, new { @class = "form-control" })
    <br />

    @Html.Label("Sosyal Medya İkon")
    @Html.TextBoxFor(x => x.ikon, new { @class = "form-control" })
    <br />

    <button class="btn btn-success">
        <i class="fa fa-file-text" aria-hidden="true"></i>
        Güncelle
    </button>

    <a href="/SosyalMedya/Index/" class="btn btn-outline-info" style="float:right">
        <i class="fa fa-undo" aria-hidden="true"></i>
        Sosyal Medya Sayfasına Geri Dön
    </a>

</form>