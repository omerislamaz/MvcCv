@using MvcCv.Models.Entity
@model List<TblAdmin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<!DOCTYPE html>
<html>
<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <br />
            <br />
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body" style="background-color:lightgrey">
                            @if (Model != null && Model.Any())
                            {
                                <div class="alert alert-warning" role="alert">
                                    <b>
                                        Toplam <strong>@Model.Count()</strong> Kullanıcı bulumaktadır.
                                    </b>
                                </div>
                            }
                            else
                            {
                        <div class="alert alert-danger">
                            Kayıtlı Kullanıcı    Bulunmuyor!
                        </div>
                            }
                            <br />
                            <div class="card">
                                <div class="card-header">
                                    <h3 class="card-title">Admin İşlemleri</h3>
                                </div>
                                <div class="card-body">
                                    <a href="/Admin/AdminEkle/" class="btn btn-info">
                                        <i class="fa fa-plus" aria-hidden="true"></i>&nbsp;
                                        Yeni Kullanıcı Ekle
                                    </a>
                                </div>
                                <table class=" table table-bordered">
                                    <tr>
                                        <th>ID</th>
                                        <th>Kullanıcı Adı</th>
                                        <th>Düzenle</th>
                                        <th>Kaldır</th>

                                    </tr>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>@item.ID</td>
                                            <td>@item.KullaniciAdi</td>

                                            <td>
                                                <a href="/Admin/AdminDuzenle/@item.ID" class="btn btn-info btn-sm">
                                                    <i class="fas fa-pencil-alt"></i>
                                                    Düzenle
                                                </a>
                                            </td>

                                            <td>
                                                <a href="/Admin/AdminSil/@item.ID" class="btn btn-danger btn-sm">
                                                    <i class="fas fa-trash"></i>
                                                    Kaldır
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>