@using MvcCv.Models.Entity
@model List<TblSertifikalarım>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int say = 2;
    string renk = "";
}
<link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" />


<!DOCTYPE html>
<html>

<body class="hold-transition sidebar-mini">
    <section class="content">
        <div class="container-fluid">
            <br />
            <br />
            <div class="row">
                <div class="col-md-12">
                    <div class="card">
                        <div class="card-body" style="background-color:lightgrey">

                            @if (Model != null && Model.Any())
                            {
                                <div class="alert alert-warning" role="alert">
                                    <b>
                                        Toplam <strong>@Model.Count()</strong> Sertifika bulumaktadır.
                                    </b>
                                </div>
                            }
                            else
                            {
                                <div class="alert alert-danger">
                                    Kayıtlı Sertifika    Bulunmuyor!
                                </div>
                            }
                            <br />
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card">
                                        <div class="card-body">
                                            <div class="tab-pane" id="timeline">
                                                <div class="timeline timeline-inverse">
                                                    @foreach (var item in Model)
                                                    {
                                                        say++;
                                                        <div class="time-label">
                                                            @{

                                                                if (say % 2 == 0)
                                                                {
                                                                    renk = "bg-danger";
                                                                }
                                                                else
                                                                {
                                                                    renk = "bg-success";
                                                                }

                                                                <span class="@renk">
                                                                    <i class="fa fa-calendar" aria-hidden="true"></i>
                                                                    &nbsp;&nbsp;&nbsp;
                                                                    @item.Tarih
                                                                </span>
                                                            }
                                                        </div>
                                                        <div>
                                                            @*<i class="fas fa-comment bg-primary"></i>*@
                                                            <div class="timeline-item">
                                                                <div class="timeline-body">
                                                                    <i class="fa fa-folder-open-o" aria-hidden="true"></i>
                                                                    <br />
                                                                    <a href="/Sertifika/SertifikaGetir/@item.ID">@item.Aciklama</a>
                                                                </div>
                                                                @*<div class="timeline-footer">
                                                                        <a href="#" class="btn btn-primary btn-sm">
                                                                            <i class="fas fa-pencil-alt"></i>
                                                                            Düzenle
                                                                        </a>
                                                                        <a href="#" class="btn btn-danger btn-sm">
                                                                            <i class="fas fa-trash"></i>
                                                                            Sil
                                                                        </a>
                                                                    </div>*@
                                                            </div>
                                                        </div>
                                                    }
                                                </div>
                                                <a href="/Sertifika/YeniSertifika/" class="btn btn-info">
                                                    <i class="fa fa-plus" aria-hidden="true"></i>
                                                    Yeni Sertifika Ekle
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>